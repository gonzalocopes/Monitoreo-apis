{
  "name": "api-sentinel-monorepo",
  "version": "1.0.0",
  "description": "API Sentinel SaaS",
  "private": true,
  "scripts": {
    "start:gateway": "cd apps/api-gateway && node index.js",
    "start:auth": "cd apps/auth-service && node index.js",
    "start:monitor": "cd apps/monitor-service && node index.js",
    "start:scheduler": "cd apps/scheduler-service && node index.js",
    "start:notification": "cd apps/notification-service && node index.js",
    "start:frontend": "cd apps/frontend && npm run dev",
    "dev:services": "concurrently \"npm run start:gateway\" \"npm run start:auth\" \"npm run start:monitor\" \"npm run start:scheduler\" \"npm run start:notification\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
